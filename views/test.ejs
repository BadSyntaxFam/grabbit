<%- include('./partials/header.ejs', {
    title: 'Grabbit - Stores',
    styles: [
        'https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css',
        '/css/style.css'
    ]
}) %>

<!--Main container-->
<div id="stores-container" class="container">

    <section id="header-section">
        <h1>Stores</h1>
        <hr>
    </section>

    <!--Main row-->
    <div class="row">

        <!--Left column-->
        <div class="col-3">

            <div id="search-menu" class="rounded shadow">

            </div>

        </div>

        <!--Right column-->
        <div class="col-9">

            <div id="store-cards-container">

                <!--store card-->
                <div class="store-card card shadow">

                    <div class="row no-gutters">

                        <div class="col-2">
                            <img class="" src="https://cmrelations.dk/wp-content/uploads/2019/03/Oasen-Kebab-Pizzaria-logo.png">
                        </div>

                        <div class="col-10">
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">This is a wider card with supporting text below as a natural
                                    lead-in to additional content. This content is a little bit longer.</p>
                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>


</div>

